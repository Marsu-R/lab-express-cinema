<div class="movies-headline">
    <h1>Ironhack Cinema</h1>

    <span>Click on the movie to check the showtimes!</span>
</div>

<div class="movies-container">
    {{#each moviesList}}
    <div class="movies-results">
        <div>
            <img class="movie-image" src=" {{this.image}} " alt="image of {{title}}">
        </div>
        <div>
            <h4>{{title}}</h4>
        </div>
        <div>
            <a href="/movies/{{_id}}">See more</a>
        </div>
    </div>
    {{/each}}

</div>